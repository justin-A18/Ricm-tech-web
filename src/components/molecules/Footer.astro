---
import Logo from '../../assets/logo.svg';
import {
	NAV_LINKS,
	NAV_LEGAL_LINKS,
	NAV_CONTACT_LINKS,
	MEMBERS_SOCIAL_LINKS,
} from '../../constants/navigation';
import BubblePerson from '../atoms/BubblePerson.astro';
import FooterColItem from '../atoms/FooterColItem.astro';
import SocialItems from '../atoms/SocialItems.astro';
---

<footer
	class='p-4 border-t-2 border-t-secondary max-w-6xl mx-auto w-full'
	id='contacto'>
	<div class='max-w-6xl mx-auto w-full'>
		<div
			class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8 py-8'>
			<div class='flex flex-col gap-4 lg:col-span-2'>
				<a
					class='flex items-center gap-3'
					href='#inicio'>
					<Logo class='size-10 rounded-lg fill-white' />
					<span class='font-bold text-xl'>RICM</span>
				</a>
				<p class='text-sm text-neutral-300 font-[400]'>
					Impulsamos tu crecimiento con software a medida, diseño inteligente y
					soluciones tecnológicas que transforman.
				</p>

				<SocialItems className='justify-start' />
			</div>

			<FooterColItem
				title='Explora'
				items={NAV_LINKS}
			/>

			<FooterColItem
				title='Legal'
				items={NAV_LEGAL_LINKS}
			/>

			<FooterColItem
				title='Contactanos'
				items={NAV_CONTACT_LINKS}
			/>
		</div>

		<div
			class='w-full font-[400] text-sm text-neutral-300 flex flex-col md:flex-row items-center justify-between gap-6'>
			<span class='flex-1 font-medium'>
				© 2025 Ricm Tech. Impulsando el futuro digital.
			</span>

			<div class='flex items-center gap-4'>
				<span class='font-medium'>Nuestro equipo:</span>
				{
					MEMBERS_SOCIAL_LINKS.map((member) => (
						<BubblePerson
							avatar={member.avatar}
							username={member.username}
							href={member.href}
						/>
					))
				}
			</div>
		</div>
	</div>
</footer>
