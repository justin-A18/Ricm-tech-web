---
import type { AstroComponent } from '@lucide/astro';

interface Props {
	title: string;
	description: string;
	icon: AstroComponent;
	className?: string;
	badge: string;
}

const {
	description,
	title,
	icon: Icon,
	badge,
	className,
} = Astro.props as Props;
---

<div
	class={`w-full h-full flex flex-col justify-center p-4 rounded-lg bg-white/5 relative space-y-3 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_0_25px_rgba(255,255,255,0.1)] hover:bg-white/10 cursor-zoom-in ${className}`}>
	<div
		class='size-10 rounded-full bg-primary text-custom-black flex items-center justify-center transition-transform duration-500 group-hover:rotate-6'>
		<Icon class='size-5' />
	</div>
	<span class='block text-primary tracking-[0.4em] text-sm font-medium'>
		{badge}
	</span>
	<h3 class='text-xl font-medium'>{title}</h3>
	<p class='text-sm font-[400] text-gray-light'>
		{description}
	</p>
</div>
