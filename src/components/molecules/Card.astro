---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	logo: ((_props: astroHTML.JSX.SVGAttributes) => any) & ImageMetadata;
	className?: string;
}

const { description, title, logo, className } = Astro.props as Props;
---

<div
	class={`sm:max-w-sm w-full h-auto p-4 rounded-md before:content-[""] before:absolute before:top-2 before:left-2 before:w-full before:h-full before:bg-custom-blue-draker before:-z-10 relative before:rounded-md space-y-3 ${className}`}>
	<div class='size-10 rounded-full bg-white flex items-center justify-center'>
		<Image
			src={logo}
			alt={title}
			width={25}
			height={25}
			class='size-5'
		/>
	</div>
	<h3 class='text-xl sm:text-2xl font-bold'>{title}</h3>
	<p class='text-sm sm:text-base font-semibold'>
		{description}
	</p>
</div>
