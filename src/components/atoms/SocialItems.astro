---
import { InstagramIcon, LinkedinIcon, MailIcon } from '@lucide/astro';
---

<div
	class='flex items-center gap-4 w-full justify-center min-[1100px]:justify-start'>
	<a
		href='#'
		target='_blank'
		rel='noopener noreferrer'
		aria-label='Visitar Instagram de RicmTech'
		class='group rounded-full p-2 border-2 transition-all duration-300 hover:-translate-y-1 hover:bg-white hover:text-custom-black hover:shadow-lg hover:shadow-white/40'>
		<InstagramIcon
			class='transition-transform duration-300 group-hover:scale-110'
		/>
	</a>

	<a
		href='https://www.linkedin.com/company/ricm-tech'
		target='_blank'
		aria-label='Visitar LinkedIn de RicmTech'
		rel='noopener noreferrer'
		class='group rounded-full p-2 border-2 transition-all duration-300 hover:-translate-y-1 hover:bg-white hover:text-custom-black hover:shadow-lg hover:shadow-white/40'>
		<LinkedinIcon
			class='transition-transform duration-300 group-hover:scale-110'
		/>
	</a>

	<a
		href='mailto:gestionclientes@ricmtech.dev'
		target='_blank'
		rel='noopener noreferrer'
		aria-label='Enviar correo a gestionclientes@ricmtech.dev'
		class='group rounded-full p-2 border-2 transition-all duration-300 hover:-translate-y-1 hover:bg-white hover:text-custom-black hover:shadow-lg hover:shadow-white/40'>
		<MailIcon class='transition-transform duration-300 group-hover:scale-110' />
	</a>
</div>
